{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/**/*.vue", "src/shims.d.ts", "./*"],
  "exclude": ["./node_modules"]
}
