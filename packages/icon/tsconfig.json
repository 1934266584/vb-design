{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "module": "esnext",
      "target": "esnext",
      "allowJs": true,
      "baseUrl": ".",
      "rootDir": ".",
      "paths": {
        "@/*": ["./*"]
      },
      "moduleResolution": "node",
      "jsx": "preserve",
      "skipLibCheck": true,
      "strict": true,
      "sourceMap": false,
      "declaration": false,
      "removeComments": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "types": ["vite-plugin-vue-layouts/client"]
    },
    "include": [
      "components/**/*.ts",
      "components/**/*.d.ts",
      "components/**/*.tsx",
      "components/**/*.vue",
      "index.ts",
    ],
    "exclude": ["./node_modules", "components.d.ts", "./dist"]
  }
  